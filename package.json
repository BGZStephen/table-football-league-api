{
  "scripts": {
    "dev": "docker-compose up -d && ts-node-dev ./src/app.ts",
    "link-api": "[ -L node_modules/api ] && unlink node_modules/api; ln -s ../api node_modules/api",
    "test": "jest"
  },
  "jest": {
    "testEnvironment": "node",
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "\\.test\\.(js|ts)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "testPathIgnorePatterns": [
      "/_mocks_",
      "/node_modules/",
      "/tests/",
      "/build/"
    ],
    "coveragePathIgnorePatterns": [
      "/_mocks_/",
      "api/routes/",
      "tests/"
    ]
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.18.3",
    "cloudinary": "^1.11.0",
    "cors": "^2.8.4",
    "debug": "^4.1.0",
    "ejs": "^2.6.1",
    "ejs-lint": "^0.3.0",
    "express": "^4.16.3",
    "joi": "^14.3.1",
    "jsonwebtoken": "^8.3.0",
    "moment": "^2.22.2",
    "mongoose": "^5.3.2",
    "multer": "^1.3.0",
    "node-mailjet": "^3.2.1",
    "supertest": "^3.0.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/jest": "^23.3.9",
    "@types/joi": "^14.3.3",
    "@types/jsonwebtoken": "^8.3.2",
    "@types/lodash": "^4.14.126",
    "@types/mongoose": "^5.5.0",
    "@types/node": "^10.12.2",
    "jest": "22.4.4",
    "ts-jest": "^23.10.4",
    "ts-node-dev": "^1.0.0-pre.38",
    "typescript": "^3.0.1"
  }
}
